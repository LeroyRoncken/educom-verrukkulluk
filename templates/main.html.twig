<html lang="nl">

<head>

    <title>Het is Verrukkuluk! {{ TITEL }} </title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>

    <link rel="stylesheet" type="text/css" href="assets/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="assets/css/fonts.css" />
    <link rel="stylesheet" type="text/css" href="assets/css/fontawesome.css" />
    {# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"> #}
    <link rel="stylesheet" type="text/css" href="assets/css/main.css" />
    <link rel="stylesheet" href="vegas/vegas.css"/>

    <script type="text/javascript" language="javascript" src="assets/jquery/jquery-3.5.1.js"></script>
    <script type="text/javascript" language="javascript" src="assets/bootstrap/js/bootstrap.js"></script>
    <script src="vegas/vegas.js"></script>

    <script>
        $(document).ready(function () {
            $("#menu").click(function() {
                $(".dropdown").slideDown()
                $(".headerLogo").fadeOut()
            })
        })

        $(document).ready(function () {
            $("#menuClose").click(function() {
                // if button is pressed, toggle, else slideUp
                $(".dropdown").slideUp()
                $(".headerLogo").fadeIn()
            })
        })

        function redirectHomepage() {
            window.location.href = "http://localhost/educom-verrukkulluk/index.php";
        }
    </script>

    {# Vegas #}
    <script>
        {% block vegasCarousel %}
        {% endblock %}
    </script>

</head>


<body>

<div class="container-fluid">

    {## Header ##}

    {# Vegas carousel #}
    <div {% block headerImage %} {% endblock %}>
        
        <div class="row">

            {# Logo #}
            <div class="col-4">
                <img class=headerLogo src="assets/img/logo-v2.png"/>
            </div>
            
            <div class="col-4"></div>
            
            {# Clickable menu button #}
            <div class="col-4">
                <div id="menu" class="menu-trigger"></div>
            </div>

            {# Dropdown menu #}
            <div id="menuClose" class="dropdown">
                <div class="row">
                    <div class="col-5">
                        <div><img class="menuLogo" src="assets/img/logo-v2.png"/ onclick="redirectHomepage()"></div>
                    </div>
                    <div class="col-3 menuButton"><h1>Mijn Favorieten</h1></div>
                    <div class="col-4 menuButton"><h1>Mijn Boodschappenlijst</h1></div>
                </div>
            </div>
            
        </div>
        
    </div>


    {## Body ##}

    <div class="row">

        {# Agenda #}
        <div class="col-md-3">
            <h2>Agenda</h2>
            <i class="fa fa-calendar"></i> FontAwesome <a href="https://fontawesome.com/icons?d=gallery&m=free">Documentation</a><br>
            <i class="fa fa-file-pdf"></i><a href="https://www.layoutit.com/build">Layout-it</a>
        </div>

        {# Dishes #}
        <div class="col-md-9">
            <h2>Content</h2>
            {%  block content %}
            {%  endblock %}
        </div>

    </div>


    {## Footer ##}

    <div class="row footer">
        
        {# Logo #}
        <div class="col-2">

            <div class="row">
                <div class="col-12"><img class=footerBurger src="assets/img/verrukkulluk-pay-off.png"/></div>
            </div>

        </div>

        {# Content #}
        <div class="col-2">

            {# Contact #}
            <div class="row">
                <div ><img class=footerContact src="assets/img/verrukkulluk-contact.png"/></div>
            </div>

            {# Information #}
            <div class="row">
                <div >
                    <p class = footerContent>
                    <br>Verrukkuluk.nl
                    <br>Poststraat 2b
                    <br>Sittard
                    <br>info@verrukkuluk.nl</p>
                </div>
            </div>

        </div>

    </div>

</div>

</body>

</html>